extends ../layout

block content
  div(id="page-contents")
    .container
      .row
        .col-md-3.static
          .card.panel.panel-default.ks-solid.ks-widget.ks-widget-info
            .ks-user1
              p &nbsp;
            .ks-user
              img.ks-avatar1(src="http://via.placeholder.com/80x77" width="100" height="100")
              .ks-info
                .ks-name= user.profile.firstName + user.profile.lastName
                .ks-description= user.company.name
            .card-block1
              .ks-item
                span.fig= user.notifications.length
                span.title Notifications
          div
            p &nbsp;
          .card.panel.panel-default.ks-solid.ks-widget.ks-widget-users
            .row
              each team, index in user.teams
                .col-xs-6
                  h5.card-header1 Team #{index}
                  .card-block
                    .ks-user
                      img.ks-avatar(src="http://via.placeholder.com/110x110" width="45" height="45")
                    .ks-user
                      img.ks-avatar(src="http://via.placeholder.com/110x110" width="45" height="45")
                    .ks-user
                      img.ks-avataract(src="http://via.placeholder.com/110x110" width="55" height="55")
              .col-xs-6
                h5.card-header1 Team 2
                .card-block
                  .ks-user
                    img.ks-avatar(src="http://via.placeholder.com/110x110" width="45" height="45")
                  .ks-user
                    img.ks-avatar(src="http://via.placeholder.com/110x110" width="45" height="45")
                  .ks-user
                    img.ks-avataract(src="http://via.placeholder.com/110x110" width="55" height="55")
          .ks-calendar
            .ks-calendar-body
              .ks-calendar-container
                .ks-calendar-container-wrap
                  div(id="ks-calendar")
                .ks-calendar-container-info(data-auto-height=true)
                  .ks-datepicker
                    .flatpickr(data-inline=true)
        .col-md-6
          h4 Activity
          .ks-social-profile
            .ks-social-profile-body
              .ks-feed
                .card.panel.panel-default.ks-post
